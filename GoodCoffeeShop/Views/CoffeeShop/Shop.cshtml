@{
}

@model GoodCoffeeShop.ViewModels.CoffeeShop.ShopViewModel

<h1>ID NUMBER: @Model.CurrentUserID</h1>
<h1>AVAILABLE FUNDS: $@Model.Funds</h1>
<br />

@{
    foreach (var item in Model.Items)
    {
        <p>Name: @item.Name</p>
        <p>Description: @item.Description</p>
        <p>Price: @item.Price</p>
        <p>Quantity: @item.Quantity</p>

        if (Model.CurrentUserID >0)
        {
            <a asp-controller="CoffeeShop" asp-action="BuyResult" asp-route-id="@item.ItemID" asp-route-userid="@Model.CurrentUserID" asp-route-funds="@Model.Funds">BUY ITEM</a>
        }

        <br />
    }
}