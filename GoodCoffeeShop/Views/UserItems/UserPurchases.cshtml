@model GoodCoffeeShop.ViewModels.CoffeeShop.UserPurchasesViewModel


<h2>Your purchased items are below: </h2>
@{
    foreach (var item in Model.userPurchases)
    {
        <a asp-controller="UserItems" asp-action="ItemDetails" asp-route-id="@item.ItemID">@item.Name Details</a>
        <a asp-controller="UserItems" asp-action="DeleteConfirmation" asp-route-id="@item.ItemID", asp-route-userid="@Model.CurrentUserID">DELETE ITEM</a>
        <br/>
    }
}

<h3>Would you like to add any items?</h3>
<a href="/CoffeeShop/Shop">ADD ITEM</a>
